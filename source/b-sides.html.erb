<% content_for(:title) { "Tailgate32 B-Side \##{@bside.number}: #{@bside.title}" } %>
<% content_for(:description) { @bside.description.gsub("\n", " ").gsub("\"", "") } %>
<% content_for(:og_meta) do %>

  <meta property="og:title"       content="Tailgate32 B-Side <%= @bside.number %>: <%= @bside.title %>" />
  <meta property="og:type"        content="video.episode" />
  <meta property="og:image"       content="http://img.youtube.com/vi/<%= @bside.video_id %>/maxresdefault.jpg" />
  <meta property="og:url"         content="http://tailgate32.com/bsides/<%= @bside.abbr %>" />
  
  <meta property="og:video"       content="http://tailgate32.com/bsides/<%= @bside.abbr %>" />
  <meta property="og:video:type"  content="text/html" />
  <meta property="video:series"   content="http://tailgate32.com/bsides" />
<% end %>

<div id="play" class="row">
  <div class="left">
    <div id="featured-video">
      <div class="headline">
        <%= image_tag 'arrow-left.png' %>
        <h1>B-Side #<%= @bside.number %>: <%= @bside.title %></h1>
      </div>
      <br />
      <div id="video-container">
        <iframe id="ytplayer" width="600" height="338" src="http://www.youtube.com/embed/<%= @bside.video_id %>?vq=hd720&showinfo=0" frameborder="0" allowFullScreen></iframe>
      </div>
      <div id="social-media">
        <div class="fb-like" data-href="http://tailgate32.com/b-sides/<%= @bside.abbr %>" data-send="true" data-width="550" data-show-faces="false" data-color-scheme="dark"></div>
      </div>
    </div>
    <div id="all-videos" class="three-column">
      <div class="headline">
        <%= image_tag 'arrow-left.png' %>
        <h1>B-Side Archive</h1>
      </div>
      <br />
      <% bsides.each do |bside| %>
        <div class="item">
          <a href="/b-sides/<%= bside.abbr %>"><img src="http://img.youtube.com/vi/<%= bside.video_id %>/maxresdefault.jpg" alt="<%= bside.title %>" /></a>
          <h3><%= bside.title %></h3>
          <span class="description"><%= bside.date %></span>
        </div>
      <% end %>
      <br class="clear" />
    </div>
  </div>
  <div class="right">
    <div id="widgets">
      <%= partial "promos/upcoming" %>
      <%= partial "promos/recent-episodes" %>
    </div>
  </div>
  <br class="clear" />
</div>
