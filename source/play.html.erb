<% content_for(:title) { "Tailgate32 #{@episode.number}: #{@episode.title}" } %>
<% content_for(:description) { @episode.description.gsub("\n", " ").gsub("\"", "") } %>
<% content_for(:og_meta) do %>

  <meta property="og:title"       content="Tailgate32 <%= @episode.number %>: <%= @episode.title %>" />
  <meta property="og:type"        content="video.episode" />
  <meta property="og:image"       content="http://img.youtube.com/vi/<%= @episode.video_id %>/maxresdefault.jpg" />
  <meta property="og:url"         content="http://tailgate32.footballnation.com/play/<%= @episode.abbr %>" />
  
  <meta property="og:video"       content="http://tailgate32.com/play/<%= @episode.abbr %>" />
  <meta property="og:video:type"  content="text/html" />
  <meta property="video:series"   content="http://tailgate32.com" />
<% end %>
<% content_for(:stylesheets) { stylesheet_link_tag :play } %>

<div id="play" class="row">
  <div class="left">
    <div id="featured-video">
      <div class="headline">
        <%= image_tag 'arrow-left.png' %>
        <h1><%= @episode.number %>: <%= @episode.title %></h1>
        <p><%= @episode.date %></p>
      </div>
      <div id="video-container">
        <iframe id="ytplayer" width="600" height="338" src="http://www.youtube.com/embed/<%= @episode.video_id %>?vq=hd720&showinfo=0" frameborder="0" allowFullScreen></iframe>
      </div>
      <div id="social-media">
        <div class="fb-like" data-href="http://tailgate32.com/play/<%= @episode.abbr %>" data-send="true" data-width="550" data-show-faces="false" data-color-scheme="dark"></div>
      </div>
    </div>
    <div id="all-videos" class="three-column">
      <div class="headline">
        <%= image_tag 'arrow-left.png' %>
        <h1>Episode Archive</h1>
      </div>
      <br />
      <% episodes.each do |episode| %>
        <div class="item">
          <a href="/play/<%= episode.abbr %>"><img src="http://img.youtube.com/vi/<%= episode.video_id %>/maxresdefault.jpg" alt="<%= episode.title %>" /></a>
          <h3><%= episode.number %>: <%= episode.title %></h3>
          <span class="description"><%= episode.date %></span>
        </div>
      <% end %>
      <br class="clear" />
    </div>
  </div>
  <div class="right">
    <div id="widgets">
      <div id="episode-details" class="widget">
        <h1>Episode Details</h1>
        <p><%= @episode.description %></p>
        <% if @episode.bands %>
          <h1>Featured Artists</h1>
          <p class="bands">
          <% @episode.bands.each do |band| %>
            <%= link_to band.name, band.link, :target => '_blank' %>
          <% end %>
          </p>
        <% end %>
        <% if @episode.thanks %>
          <h1>Special Thanks</h1>
          <p><%= @episode.thanks %></p>
        <% end %>
      </div>
    </div>
  </div>
  <br class="clear" />
</div>
