<div id="all-videos" class="three-column">
  <h1>B-Side Archive</h1>
  <% bsides.each do |bside| %>
    <div class="item">
      <a href="<%= bside.relative_url %>"><img src="<%= bside.thumbnail_url %>" alt="<%= bside.title %>" /></a>
      <h3><%= bside.short_title || bside.title %></h3>
      <h4><%= bside.date %></h4>
    </div>
  <% end %>
  <br class="clear" />
</div>
